<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="cn.jpush.im.android.api.model.GroupMemberInfo" />
        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_login_3party_wechat"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@{item.userInfo.userName}"
            android:textColor="#ff000000"
            android:textSize="9sp"
            android:visibility="gone" />


        <FrameLayout
            android:id="@+id/rl_add"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="22.5dp"
            android:layout_marginTop="22.5dp"
            android:background="@drawable/chat_detail_add">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12.5dp"
                android:layout_marginTop="12.5dp"
                android:src="@drawable/add_blue" />

        </FrameLayout>

    </LinearLayout>
</layout>